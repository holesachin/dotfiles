#!/bin/sh

choose=$(printf "ğŸ”’ Lock\nï¡‚  Logout\nâ»  Shutdown\nï€  Reboot\nğŸ’¤ Suspend\n" | rofi -dmenu -p "Power Menu: " -theme ${HOME}/.config/rofi/power.rasi | cut -d' ' -f2- | tr -d ' ')

case "${choose}" in
    "Shutdown") systemctl poweroff          ;;
      "Reboot") systemctl reboot            ;;
        "Lock") betterlockscreen -l blur    ;;
     "Suspend") systemctl suspend           ;;
      "Logout") hyprctl exit || bspc quit   ;;
             *) exit 1                      ;; 
esac
